<% @main_interests.each do |main_interest| %>
  <div class="category-main-name <%= main_interest %>">
    <h3><%= main_interest.name %></h3>
    <% interests = @all_categories.select { |cat| cat.name == main_interest.name } %>
      <div class="subcategory-names <%= main_interest %>">
        <% interests.each do |interest| %>
          <p><%= check_box_tag 'interests[]', interest.subcategory_name, @user_interests.include?(interest.subcategory_name), multiple: true %><%= interest.subcategory_name %></p>
        <% end %>
      </div>
  </div>
<% end %>
