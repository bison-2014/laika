<h2>Sign Up</h2>
  <%= form_tag users_path do %>
    Name:             <%= text_field_tag :name %><br>
    Email:            <%= text_field_tag :email %><br>
    Password:         <%= password_field_tag :password %><br>
    Confirm password: <%= password_field_tag :password_confirmation %><br>

    <%= errors.full_messages[0] if errors.any? %>
    <%= submit_tag "Sign Up" %>
  <%end%>